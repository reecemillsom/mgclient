{
  "name": "mgclient",
  "version": "1.0.1",
  "description": "mgclient is a mongoose client that conveniently supports CRUD functionality. Its design allows for extensibility for more specific queries.",
  "main": "index.ts",
  "author": "Reece Millsom",
  "license": "ISC",
  "dependencies": {
    "lodash": "^4.17.21",
    "mongoose": "^7.0.3"
  },
  "devDependencies": {
    "@types/chai": "^4.3.4",
    "@types/lodash": "^4.14.191",
    "@types/mocha": "^10.0.1",
    "chai": "^4.3.7",
    "codecov": "^3.8.3",
    "mocha": "^10.2.0",
    "nyc": "^15.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.2"
  },
  "keywords": [
    "mongoose-client",
    "mongoose",
    "mongodb",
    "mongo"
  ],
  "scripts": {
    "tsc": "tsc",
    "test": "mocha -r ts-node/register src/**/*.spec.ts",
    "coverage": "npm run tsc && nyc npm run test"
  },
  "nyc": {
    "lines": 95,
    "statements": 95,
    "functions": 90,
    "branches": 90,
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "src/**/*.spec.ts"
    ],
    "reporter": [
      "lcov",
      "text-summary"
    ],
    "cache": true,
    "check-coverage": true,
    "sourceMap": true,
    "instrument": true,
    "report-dir": "./coverage"
  },
  "packageManager": "yarn@3.5.0"
}
