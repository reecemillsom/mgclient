{
  "name": "mgclient",
  "version": "1.0.1",
  "description": "mgclient is a mongoose client that conveniently supports CRUD functionality. Its design allows for extensibility for more specific queries.",
  "main": "index.ts",
  "author": "Reece Millsom",
  "license": "ISC",
  "dependencies": {
    "lodash": "^4.17.11",
    "mongoose": "^5.5.7"
  },
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/lodash": "^4.14.121",
    "@types/mocha": "^5.2.6",
    "@types/mongoose": "^5.3.20",
    "chai": "^4.2.0",
    "codecov": "^3.4.0",
    "mocha": "^6.0.2",
    "nyc": "^14.1.1",
    "ts-node": "^8.0.2",
    "typescript": "^3.3.3333"
  },
  "keywords": [
    "mongoose-client",
    "mongoose",
    "mongodb",
    "mongo"
  ],
  "scripts": {
    "tsc": "tsc",
    "test": "npm run tsc && nyc mocha"
  },
  "nyc": {
    "lines": 95,
    "statements": 95,
    "functions": 90,
    "branches": 90,
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "src/**/*.spec.ts"
    ],
    "reporter": [
      "lcov",
      "text-summary"
    ],
    "cache": true,
    "check-coverage": true,
    "sourceMap": true,
    "instrument": true,
    "report-dir": "./coverage"
  },
  "packageManager": "yarn@3.5.0"
}
